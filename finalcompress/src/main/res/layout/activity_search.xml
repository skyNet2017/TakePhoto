<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_root"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.wuhenzhizao.titlebar.widget.CommonTitleBar
            android:layout_width="match_parent"
            app:statusBarColor="@color/colorPrimaryDark"
            app:fillStatusBar="true"
            app:centerSearchRightType="delete"
            app:titleBarColor="@color/colorPrimary"
            app:leftDrawable="@drawable/ic_arrow_back"
            android:id="@+id/titlebar"
            app:centerSearchEditable="true"
            app:centerSearchBg="@drawable/btn_pressed"
            app:centerType="searchView"
            app:rightType="textView"
            app:rightText="搜索"
            app:rightTextColor="#ffffff"
            android:layout_height="wrap_content"/>
        <!--搜索,过滤条-->

        <View
            android:layout_below="@id/titlebar"
            android:layout_width="match_parent"
            android:background="#666666"
            android:id="@+id/v"
            android:layout_height="1dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycler"
            android:layout_below="@id/v"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pager"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pre"
            android:text="pre"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <SeekBar

            android:id="@+id/sb_pager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv_next"
            android:text="next"
            android:textColor="@color/white"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>
    <TextView
        android:layout_above="@id/ll_pager"
        android:id="@+id/tv_pb_info"
        android:layout_marginBottom="-10dp"
        android:text="pre"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>

