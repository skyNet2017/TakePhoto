<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_compress"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_original"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/iv_original"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_original"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"/>
        <com.darsh.multipleimageselect.compress.MyLargeImageView
            android:id="@+id/iv_original_saf"
            android:visibility="gone"
            android:scrollbars="vertical|horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_original"
            style="@style/c_textview_bg"
            android:padding="10dp"
            android:maxLines="3"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
          android:layout_below="@id/tv_original"
            android:layout_centerHorizontal="true"
            android:textColor="@color/exo_white"
            style="@style/c_textview_bg"
            android:id="@+id/tv_progress"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_compressed"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/iv_compressed"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.darsh.multipleimageselect.compress.MyLargeImageView
            android:id="@+id/iv_compressed_saf"
            android:visibility="gone"
            android:scrollbars="vertical|horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:padding="10dp"
            style="@style/c_textview_bg"
            android:id="@+id/tv_compressed"
            android:maxLines="3"
            android:ellipsize="end"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_glide"
            android:layout_alignParentBottom="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </RelativeLayout>
</LinearLayout>