<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_image_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"/>

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:leftTextColor="#ffffff"
        titlebar:rightTextColor="#ffffff"
        titlebar:titleBarHeight="45dp"
        titlebar:fillStatusBar="true"
        titlebar:statusBarColor="@color/multiple_image_select_primary"
        titlebar:titleBarColor="@color/multiple_image_select_primary"
        titlebar:leftDrawable="@drawable/ic_arrow_back"
        titlebar:leftText="文件夹"
        titlebar:leftType="textView"
        titlebar:rightText="menu"
        titlebar:rightType="textView" />

    <ProgressBar
        android:id="@+id/progress_bar_image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/text_view_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/error_null_cursor"/>

    <GridView
        android:id="@+id/grid_view_image_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:stretchMode="columnWidth"/>
    <LinearLayout
        android:id="@+id/ll_pager"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:onClick="pre"
            android:text="pre"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <SeekBar

            android:id="@+id/sb_pager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"/>
        <TextView
            android:onClick="next"
            android:text="next"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>

</RelativeLayout>